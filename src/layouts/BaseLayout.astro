---
const { title } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="sticky top-0 bg-white dark:bg-gray-900 py-4 px-6 shadow-sm">
      <div class="max-w-prose mx-auto">
        <nav>
          <ul class="flex flex-wrap gap-x-4 gap-y-2">
            <li>
              <a 
                href="/" 
                class:list={[
                  "whitespace-nowrap hover:opacity-80 transition-opacity px-2 py-2",
                  pathname === "/" ? "bg-gray-100 dark:bg-gray-800 rounded" : ""
                ]}
              >
                Home
              </a>
            </li>
            <li>
              <a 
                href="/thoughts" 
                class:list={[
                  "whitespace-nowrap hover:opacity-80 transition-opacity px-2 py-2",
                  pathname === "/thoughts" ? "bg-gray-100 dark:bg-gray-800 rounded" : ""
                ]}
              >
                Thoughts
              </a>
            </li>
            <li>
              <a 
                href="/contact" 
                class:list={[
                  "whitespace-nowrap hover:opacity-80 transition-opacity px-2 py-2",
                  pathname === "/contact" ? "bg-gray-100 dark:bg-gray-800 rounded" : ""
                ]}
              >
                Contact
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="flex-grow px-6 py-8">
      <div class="prose dark:prose-invert max-w-prose mx-auto">
        <slot />
      </div>
    </main>

    <footer class="py-4 px-6 text-center text-sm text-gray-600 dark:text-gray-400">
      <p>&copy; {new Date().getFullYear()} David Lanier. <a href="/privacy" class="hover:opacity-80 transition-opacity">Privacy Policy</a></p>
    </footer>
  </body>
</html>