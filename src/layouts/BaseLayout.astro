---
const { title } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
function getNavClass(href: string) {
  return [
    "whitespace-nowrap hover:opacity-80 transition-opacity px-2 py-2",
    href === "/"
      ? pathname === "/" ? "bg-gray-100 dark:bg-gray-800 rounded" : ""
      : pathname.startsWith(href) ? "bg-gray-100 dark:bg-gray-800 rounded" : ""
  ];
}
import "../styles/tailwind.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | David Lanier</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="sticky top-0 bg-white dark:bg-gray-900 py-4 px-0 shadow-sm">
      <div class="mx-auto main-nav">
        <nav>
          <ul class="flex flex-wrap gap-x-4 gap-y-2">
            <li>
              <a 
                href="/" 
                class:list={getNavClass("/")}
              >
                Home
              </a>
            </li>
            <li>
              <a 
                href="/thoughts" 
                class:list={getNavClass("/thoughts")}
              >
                Thoughts
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="flex-grow px-6 py-8">
      <div class="prose dark:prose-invert max-w-prose mx-auto">
        <slot />
      </div>
    </main>

    <footer class="py-4 px-6 text-center text-sm text-gray-600 dark:text-gray-400">
      <p><a href="/terms" class="hover:opacity-80 transition-opacity">&copy; {new Date().getFullYear()} David Lanier</a></p>
    </footer>
  </body>
</html>